{
    "include": ["./src/**/*"],
    "exclude": ["node_modules"],
    "module": "node",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./src",
        "allowJs": true,
        "target": "es5",
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "dist/types"
      }
}